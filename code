	{ 
		buff[i] = records[i];
	}
	records = new Rec[size];
	for (int i = 0; i < size - 1; i++)
	{
		records[i] = buff[i];
	}
	cin.ignore();
		cout << "Введите услугу для " << size << " записи:" << endl;
		cin >> records[size-1].service;
		system("cls");

		cin.ignore();
		cin.clear();
