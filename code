					sortirovka(count1, size);
				}
			break;
		}
		case 5: {
			string clientsNameToSearch;
			string clientsSernameToSearch;
			string clientsPatronymicToSearch;
			system("cls");
			cout << "Введите ФИО клиента для поиска: " << endl;
