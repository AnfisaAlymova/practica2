							<< left << setw(22) << records[i].service << "|"
							<< left << setw(15) << records[i].price << "|"
							<< left << setw(35) << records[i].master.name + " " + records[i].master.sername + " " + records[i].master.patronymic << "|"
							<< left << setw(2) << records[i].data.day << "/"
