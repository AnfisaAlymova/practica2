							<< left << setw(2) << records[i].time.hours << ":"
							<< setw(12) << records[i].time.minutes << "|"
							<< left << setw(35) << records[i].client.name + " " + records[i].client.sername + " " + records[i].client.patronymic << "|"
							<< left << setw(22) << records[i].clientsNumber << "|"
							<< endl;
						cout << "-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------" << endl;
						matrix[count1][0] = string(records[i].service);
						matrix[count1][1] = to_string(records[i].price);
						matrix[count1][2] = string(records[i].master.name);
						matrix[count1][3] = string(records[i].master.sername);
						matrix[count1][4] = string(records[i].master.patronymic);
